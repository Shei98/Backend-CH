<div class="container mt-3">
  <div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br />
    <div class="table-responsive">
      <table class="table table-dark">
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto</th>
        </tr>
        {{#if hayProductos}}
          {{#each productos}}
            <tr>
              <td>{{this.title}} </td>
              <td>{{this.price}} </td>
              <td><img src={{this.thumbnail}} width="100px"/></td>
            </tr>
          {{/each}}
        {{/if}}
      </table>
    </div>
    <br />
    <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>
  </div>
</div>